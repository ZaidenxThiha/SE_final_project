@model AWEfinal.DAL.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="alert alert-success alert-dismissible fade show" role="alert">
    <h2 class="mb-3">Order Confirmed! âœ“</h2>
    <p class="mb-2">Thank you for your order. Your order number is: <strong>@Model.OrderNumber</strong></p>
    @if (!string.IsNullOrEmpty(Model.InvoiceNumber))
    {
        <p class="mb-0">Invoice Number: <strong>@Model.InvoiceNumber</strong></p>
    }
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<div class="row">
    <div class="col-md-6">
        <h4>Order Summary</h4>
        <p><strong>Total:</strong> $@Model.Total.ToString("N2")</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
    </div>
    <div class="col-md-6">
        <h4>Shipping Information</h4>
        <p>@Model.ShippingFullName</p>
        <p>@Model.ShippingAddress</p>
        <p>@Model.ShippingCity, @Model.ShippingPostalCode</p>
        <p>@Model.ShippingCountry</p>
    </div>
</div>

<h4>Order Items</h4>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>$@item.Price.ToString("N2")</td>
                <td>$@item.Subtotal.ToString("N2")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"><strong>Total:</strong></td>
            <td><strong>$@Model.Total.ToString("N2")</strong></td>
        </tr>
    </tfoot>
</table>

<div class="mt-4 mb-4">
    <div class="card-awe p-4">
        <h4 class="mb-3">Next Steps</h4>
        <div class="d-flex flex-wrap gap-2">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                <i class="bi bi-house"></i> Continue Shopping
            </a>
            <a href="@Url.Action("Index", "Order")" class="btn btn-secondary">
                <i class="bi bi-list-ul"></i> View My Orders
            </a>
            <a href="@Url.Action("VnPayQr", "Payment", new { orderId = Model.Id })" class="btn btn-outline-success">
                <i class="bi bi-qr-code-scan"></i> Pay with VNPay
            </a>
            <a href="@Url.Action("PrintReceipt", "Cart", new { id = Model.Id })" target="_blank" class="btn btn-success">
                <i class="bi bi-printer"></i> Print Receipt
            </a>
        </div>
    </div>
</div>
