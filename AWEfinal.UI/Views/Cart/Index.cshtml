@model List<AWEfinal.UI.Controllers.CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
    decimal total = Model?.Sum(c => c.Subtotal) ?? 0;
}

<h2>Shopping Cart</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <p>Your cart is empty.</p>
    <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Continue Shopping</a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>$@item.Price.ToString("N2")</td>
                    <td>
                        <form method="post" asp-action="UpdateCart" class="d-inline">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control d-inline-block" style="width: 80px;" />
                            <button type="submit" class="btn btn-sm btn-primary">Update</button>
                        </form>
                    </td>
                    <td>$@item.Subtotal.ToString("N2")</td>
                    <td>
                        <form method="post" asp-action="RemoveFromCart" class="d-inline">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"><strong>Total:</strong></td>
                <td><strong>$@total.ToString("N2")</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Continue Shopping</a>
        <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary">Proceed to Checkout</a>
        <form method="post" asp-action="ClearCart" class="d-inline">
            <button type="submit" class="btn btn-danger">Clear Cart</button>
        </form>
    </div>
}

