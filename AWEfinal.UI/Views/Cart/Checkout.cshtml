@{
    ViewData["Title"] = "Checkout";
    var errorMessage = ViewBag.Error as string;
}

<section class="awe-section">
    <div class="awe-section__header">
        <div>
            <h1 class="awe-section__title">Secure checkout</h1>
            <p class="awe-section__subtitle">
                Complete your order with the same polished flow showcased in the AWE Store prototype.
            </p>
        </div>
        <a class="awe-btn awe-btn--ghost" asp-action="Index">Back to cart</a>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="awe-toast awe-toast--error mb-3">
            <span>@errorMessage</span>
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
    }

    <form asp-action="Checkout" method="post">
        @Html.AntiForgeryToken()

        <div class="awe-cart">
            <div class="awe-surface">
                <h2 class="h5 mb-3">Shipping information</h2>
                <div class="awe-form">
                    <div class="awe-input-group">
                        <label for="fullName">Full name</label>
                        <input type="text" class="awe-input" id="fullName" name="fullName" required />
                    </div>
                    <div class="awe-input-group">
                        <label for="phone">Phone</label>
                        <input type="tel" class="awe-input" id="phone" name="phone" required />
                    </div>
                    <div class="awe-input-group">
                        <label for="address">Address</label>
                        <textarea class="awe-input" id="address" name="address" rows="3" required></textarea>
                    </div>
                    <div class="awe-input-group">
                        <label for="city">City</label>
                        <input type="text" class="awe-input" id="city" name="city" required />
                    </div>
                    <div class="awe-input-group">
                        <label for="postalCode">Postal code</label>
                        <input type="text" class="awe-input" id="postalCode" name="postalCode" required />
                    </div>
                    <div class="awe-input-group">
                        <label for="country">Country</label>
                        <input type="text" class="awe-input" id="country" name="country" required />
                    </div>
                </div>
            </div>

            <div class="awe-surface awe-cart-summary">
                <h2 class="h5 mb-3">Payment method</h2>
                <div class="awe-input-group">
                    <label for="paymentMethod">Choose how youâ€™d like to pay</label>
                    <select class="awe-select" id="paymentMethod" name="paymentMethod" required>
                        <option value="">Select payment method</option>
                        <option value="Credit Card">Credit card</option>
                        <option value="Debit Card">Debit card</option>
                        <option value="PayPal">PayPal</option>
                        <option value="Cash on Delivery">Cash on delivery</option>
                    </select>
                </div>
                <div class="awe-tagline">
                    We encrypt your information and never store card details. Cash on delivery keeps things even simpler.
                </div>
            </div>
        </div>

        <div class="awe-cta-group mt-4">
            <button type="submit" class="awe-btn awe-btn--primary">Place order</button>
            <a class="awe-btn awe-btn--ghost" asp-action="Index">Return to cart</a>
        </div>
    </form>
</section>
