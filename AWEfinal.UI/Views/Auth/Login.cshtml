@{
    ViewData["Title"] = "Login";
    var errorMessage = ViewBag.Error as string;
}

<section class="awe-form-card">
    <h2>Welcome back</h2>
    <p class="awe-tagline text-center mb-3">Access the tailored dashboard experience crafted for the AWE Store UI.</p>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="awe-alert mb-3">
            <strong>Heads up:</strong> @errorMessage
        </div>
    }

    <form asp-action="Login" method="post" class="awe-form">
        @Html.AntiForgeryToken()
        <div class="awe-input-group">
            <label for="email">Email</label>
            <input type="email"
                   class="awe-input"
                   id="email"
                   name="email"
                   placeholder="your@email.com"
                   required
                   autofocus />
        </div>
        <div class="awe-input-group">
            <label for="password">Password</label>
            <input type="password"
                   class="awe-input"
                   id="password"
                   name="password"
                   placeholder="Enter your password"
                   required />
        </div>
        <button type="submit" class="awe-btn awe-btn--primary awe-btn--block">Sign in</button>
    </form>

    <div class="awe-form__footer mt-3">
        Don't have an account? <a asp-action="Register">Register here</a>
    </div>
</section>