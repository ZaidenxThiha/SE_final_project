@{
    ViewData["Title"] = "Register";
    var errorMessage = ViewBag.Error as string;
}

<section class="awe-form-card">
    <h2>Create your account</h2>
    <p class="awe-tagline text-center mb-3">Sign up to unlock the revamped AWE Store dashboard experience.</p>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="awe-alert mb-3">@errorMessage</div>
    }

    <form asp-action="Register" method="post" class="awe-form">
        <div class="awe-input-group">
            <label for="name">Full name</label>
            <input type="text" class="awe-input" id="name" name="name" required />
        </div>
        <div class="awe-input-group">
            <label for="email">Email</label>
            <input type="email" class="awe-input" id="email" name="email" required />
        </div>
        <div class="awe-input-group">
            <label for="password">Password</label>
            <input type="password" class="awe-input" id="password" name="password" required />
        </div>
        <button type="submit" class="awe-btn awe-btn--primary awe-btn--block">Create account</button>
    </form>

    <div class="awe-form__footer mt-3">
        Already have an account? <a asp-action="Login">Sign in here</a>
    </div>
</section>
