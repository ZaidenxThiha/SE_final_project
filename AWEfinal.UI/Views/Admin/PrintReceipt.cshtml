@model AWEfinal.DAL.Models.Order
@{
    ViewData["Title"] = "Customer Receipt";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Receipt - @Model.OrderNumber</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            font-size: 12pt;
            line-height: 1.6;
            color: #000;
            background: #fff;
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
        }

        @@media print {
            body {
                padding: 0;
            }
            .no-print {
                display: none !important;
            }
            @@page {
                size: A4;
                margin: 1cm;
            }
        }

        .receipt-header {
            text-align: center;
            border-bottom: 3px solid #073634;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .receipt-header h1 {
            color: #073634;
            font-size: 32pt;
            margin-bottom: 10px;
            letter-spacing: 0.1em;
        }

        .receipt-title {
            font-size: 24pt;
            font-weight: bold;
            color: #073634;
            margin: 20px 0;
            text-align: center;
        }

        .receipt-info {
            border: 2px solid #000;
            padding: 15px;
            margin-bottom: 20px;
        }

        .receipt-info h3 {
            color: #073634;
            margin-bottom: 10px;
            font-size: 14pt;
            border-bottom: 1px solid #000;
            padding-bottom: 5px;
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
        }

        .info-label {
            font-weight: bold;
            min-width: 150px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        table th, table td {
            border: 2px solid #000;
            padding: 10px;
            text-align: left;
        }

        table th {
            background-color: #073634;
            color: #fff;
            font-weight: bold;
        }

        table tbody tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        .total-section {
            margin-top: 20px;
            text-align: right;
            border-top: 3px solid #073634;
            padding-top: 15px;
        }

        .total-row {
            font-size: 16pt;
            font-weight: bold;
            margin-top: 10px;
        }

        .payment-info {
            margin-top: 30px;
            padding: 15px;
            border: 2px solid #000;
            background-color: #EDEECE;
        }

        .thank-you {
            text-align: center;
            margin-top: 30px;
            padding: 20px;
            border: 2px solid #073634;
            background-color: #EDEECE;
        }

        .thank-you h2 {
            color: #073634;
            font-size: 20pt;
            margin-bottom: 10px;
        }

        .print-button {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #073634;
            color: white;
            border: 2px solid #000;
            padding: 10px 20px;
            font-size: 14pt;
            cursor: pointer;
            z-index: 1000;
        }

        .print-button:hover {
            background-color: #052a28;
        }

        .company-details {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <button class="print-button no-print" onclick="window.print()">
        <i class="bi bi-printer"></i> Print Receipt
    </button>

    <div class="receipt-header">
        <div class="company-details">
            <h1>AWE ELECTRONICS</h1>
            <p>Glenferrie Road, Melbourne, Australia</p>
            <p>Phone: 03-00000000 | Email: sales@awe.com</p>
        </div>
    </div>

    <div class="receipt-title">CUSTOMER RECEIPT</div>

    <div class="receipt-info">
        <h3>Receipt Information</h3>
        <div class="info-row">
            <span class="info-label">Receipt #:</span>
            <span>@(Model.InvoiceNumber ?? Model.OrderNumber ?? Model.Id.ToString())</span>
        </div>
        <div class="info-row">
            <span class="info-label">Order Number:</span>
            <span>@Model.OrderNumber</span>
        </div>
        <div class="info-row">
            <span class="info-label">Date:</span>
            <span>@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</span>
        </div>
        <div class="info-row">
            <span class="info-label">Status:</span>
            <span>@Model.Status.ToUpper()</span>
        </div>
    </div>

    <div class="receipt-info">
        <h3>Customer Information</h3>
        <p><strong>Name:</strong> @Model.ShippingFullName</p>
        <p><strong>Address:</strong> @Model.ShippingAddress</p>
        <p><strong>City:</strong> @Model.ShippingCity, @Model.ShippingPostalCode</p>
        <p><strong>Country:</strong> @Model.ShippingCountry</p>
        <p><strong>Phone:</strong> @Model.ShippingPhone</p>
    </div>

    <table>
        <thead>
            <tr>
                <th style="width: 5%;">#</th>
                <th style="width: 45%;">Item Description</th>
                <th style="width: 15%;">Qty</th>
                <th style="width: 15%;">Unit Price</th>
                <th style="width: 20%;">Amount</th>
            </tr>
        </thead>
        <tbody>
            @{
                int itemNumber = 1;
            }
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@itemNumber</td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>$@item.Price.ToString("N2")</td>
                    <td>$@item.Subtotal.ToString("N2")</td>
                </tr>
                itemNumber++;
            }
        </tbody>
    </table>

    <div class="total-section">
        <div class="total-row">
            <span style="margin-right: 20px;">TOTAL AMOUNT:</span>
            <span style="font-size: 20pt;">$@Model.Total.ToString("N2")</span>
        </div>
    </div>

    <div class="payment-info">
        <h3>Payment Information</h3>
        <p><strong>Payment Method:</strong> @(Model.PaymentMethod ?? "Not Specified")</p>
        <p><strong>Payment Status:</strong> @Model.Status.ToUpper()</p>
        @if (!string.IsNullOrEmpty(Model.TrackingNumber))
        {
            <p><strong>Tracking Number:</strong> @Model.TrackingNumber</p>
        }
    </div>

    <div class="thank-you">
        <h2>Thank You for Your Purchase!</h2>
        <p>We appreciate your business and hope you enjoy your products.</p>
        <p style="margin-top: 15px;"><strong>For any inquiries, please contact us:</strong></p>
        <p>Phone: 03-00000000 | Email: support@awe.com</p>
        <p style="margin-top: 15px; font-size: 10pt;">This is your official receipt. Please keep it for your records.</p>
    </div>

    <script>
        // Auto-print when page loads (optional)
        // window.onload = function() { window.print(); }
    </script>
</body>
</html>

