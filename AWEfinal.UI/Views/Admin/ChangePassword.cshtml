@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var successMessage = TempData["SuccessMessage"] as string;
}

<div class="row">
    <div class="col-lg-6">
        <div class="card shadow-sm border-2">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-shield-lock me-2"></i>Update Admin Password</h5>
            </div>
            <div class="card-body bg-light">
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success border-2">
                        <i class="bi bi-check-circle me-2"></i>@successMessage
                    </div>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-warning border-2">
                        <i class="bi bi-exclamation-triangle me-2"></i>Please fix the errors below.
                    </div>
                }

                <form asp-action="ChangePassword" method="post" class="needs-validation">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label fw-semibold" for="currentPassword">Current Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                            <input class="form-control" type="password" id="currentPassword" name="currentPassword" required />
                        </div>
                        <span class="text-danger small">@Html.ValidationMessage("", new { @class = "d-block" })</span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold" for="newPassword">New Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input class="form-control" type="password" id="newPassword" name="newPassword" required minlength="8" />
                        </div>
                        <small class="text-muted">Use at least 8 characters. Avoid reusing old passwords.</small>
                    </div>
                    <div class="mb-4">
                        <label class="form-label fw-semibold" for="confirmPassword">Confirm New Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input class="form-control" type="password" id="confirmPassword" name="confirmPassword" required minlength="8" />
                        </div>
                        <span class="text-danger small">@Html.ValidationMessage("confirmPassword")</span>
                    </div>
                    <button type="submit" class="btn btn-dark px-4">
                        <i class="bi bi-arrow-repeat me-2"></i>Change Password
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
