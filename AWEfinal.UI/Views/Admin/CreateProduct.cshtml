@model AWEfinal.DAL.Models.Product
@{
    ViewData["Title"] = "Create Product";
    Layout = "_AdminLayout";
}

<h2>Create Product</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="CreateProduct" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Category">Category</label>
        <select asp-for="Category" class="form-control" required>
            <option value="">Select Category</option>
            <option value="Smartphones">Smartphones</option>
            <option value="Laptops">Laptops</option>
            <option value="Tablets">Tablets</option>
            <option value="Headphones">Headphones</option>
            <option value="Smart TVs">Smart TVs</option>
            <option value="Cameras">Cameras</option>
            <option value="Smartwatches">Smartwatches</option>
            <option value="Gaming Consoles">Gaming Consoles</option>
            <option value="Speakers">Speakers</option>
            <option value="Monitors">Monitors</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Storage">Storage (Optional)</label>
        <input asp-for="Storage" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Rating">Rating</label>
        <input asp-for="Rating" class="form-control" type="number" step="0.1" min="0" max="5" value="0" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="StockQuantity">Stock Quantity (Units Left)</label>
        <input asp-for="StockQuantity" class="form-control" type="number" min="0" value="0" required />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
        <small class="form-text text-muted">Enter the number of units available in stock</small>
    </div>
    <div class="form-group mb-3">
        <label>Product Images</label>
        <input type="file" name="images" class="form-control" accept="image/*" multiple />
        <small class="form-text text-muted">You can select multiple images for this product</small>
    </div>
    <div class="form-group mb-3">
        <label>
            <input asp-for="InStock" type="checkbox" /> In Stock
        </label>
    </div>
    <button type="submit" class="btn btn-awe-primary">Create Product</button>
    <a href="@Url.Action("Products", "Admin")" class="btn btn-awe-secondary">Cancel</a>
</form>

