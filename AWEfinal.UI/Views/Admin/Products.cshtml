@model List<AWEfinal.DAL.Models.Product>
@{
    ViewData["Title"] = "Product Management";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Product Management</h2>
    <a href="@Url.Action("CreateProduct", "Admin")" class="btn btn-awe-primary">
        <i class="bi bi-plus-circle"></i> Add New Product
    </a>
</div>

<div class="table-awe">
    <table class="table table-hover mb-0">
        <thead>
            <tr>
                <th class="px-4 py-3">ID</th>
                <th class="px-4 py-3">Name</th>
                <th class="px-4 py-3">Category</th>
                <th class="px-4 py-3">Price</th>
                <th class="px-4 py-3">Units Left</th>
                <th class="px-4 py-3">Instock</th>
                <th class="px-4 py-3">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var product in Model)
                {
                    <tr>
                        <td class="px-4 py-3">@product.Id</td>
                        <td class="px-4 py-3">@product.Name</td>
                        <td class="px-4 py-3">@product.Category</td>
                        <td class="px-4 py-3">$@product.Price.ToString("N2")</td>
                        <td class="px-4 py-3">
                            <span class="badge @(product.StockQuantity > 0 ? "bg-info" : "bg-warning")">
                                @product.StockQuantity
                            </span>
                        </td>
                        <td class="px-4 py-3">
                            @if (product.InStock && product.StockQuantity > 0)
                            {
                                <span class="badge bg-success">In Stock</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Out of Stock</span>
                            }
                        </td>
                        <td class="px-4 py-3">
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("EditProduct", "Admin", new { id = product.Id })" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form method="post" asp-action="DeleteProduct" class="d-inline">
                                    <input type="hidden" name="id" value="@product.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center py-4">No products found</td>
                </tr>
            }
        </tbody>
    </table>
</div>
