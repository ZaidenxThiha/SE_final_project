@model AWEfinal.DAL.Models.Order
@{
    ViewData["Title"] = "Delivery Note";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delivery Note - @Model.OrderNumber</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            font-size: 12pt;
            line-height: 1.6;
            color: #000;
            background: #fff;
            padding: 20px;
        }

        @@media print {
            body {
                padding: 0;
            }
            .no-print {
                display: none !important;
            }
            @@page {
                size: A4;
                margin: 1cm;
            }
        }

        .header {
            border-bottom: 3px solid #073634;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .header h1 {
            color: #073634;
            font-size: 24pt;
            margin-bottom: 10px;
        }

        .company-info {
            margin-bottom: 20px;
        }

        .delivery-note-title {
            font-size: 28pt;
            font-weight: bold;
            color: #073634;
            text-align: center;
            margin: 20px 0;
        }

        .info-section {
            margin-bottom: 25px;
            border: 2px solid #000;
            padding: 15px;
        }

        .info-section h3 {
            color: #073634;
            margin-bottom: 10px;
            font-size: 14pt;
            border-bottom: 1px solid #000;
            padding-bottom: 5px;
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
        }

        .info-label {
            font-weight: bold;
            min-width: 150px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        table th, table td {
            border: 2px solid #000;
            padding: 10px;
            text-align: left;
        }

        table th {
            background-color: #073634;
            color: #fff;
            font-weight: bold;
        }

        table tbody tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        .total-section {
            margin-top: 20px;
            text-align: right;
        }

        .total-row {
            font-size: 14pt;
            font-weight: bold;
            margin-top: 10px;
        }

        .signature-section {
            margin-top: 50px;
            display: flex;
            justify-content: space-between;
        }

        .signature-box {
            width: 45%;
            border-top: 2px solid #000;
            padding-top: 10px;
            text-align: center;
        }

        .print-button {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: #073634;
            color: white;
            border: 2px solid #000;
            padding: 10px 20px;
            font-size: 14pt;
            cursor: pointer;
            z-index: 1000;
        }

        .print-button:hover {
            background-color: #052a28;
        }
    </style>
</head>
<body>
    <button class="print-button no-print" onclick="window.print()">
        <i class="bi bi-printer"></i> Print Delivery Note
    </button>

    <div class="header">
        <div class="company-info">
            <h1>AWE Electronics</h1>
            <p><strong>Address:</strong> Glenferrie Road, Melbourne, Australia</p>
            <p><strong>Phone:</strong> 03-00000000</p>
            <p><strong>Email:</strong> sales@awe.com</p>
        </div>
    </div>

    <div class="delivery-note-title">DELIVERY NOTE</div>

    <div class="info-section">
        <h3>Delivery Information</h3>
        <div class="info-row">
            <span class="info-label">Delivery Note #:</span>
            <span>@(Model.InvoiceNumber ?? Model.OrderNumber ?? Model.Id.ToString())</span>
        </div>
        <div class="info-row">
            <span class="info-label">Order Number:</span>
            <span>@Model.OrderNumber</span>
        </div>
        <div class="info-row">
            <span class="info-label">Date:</span>
            <span>@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
        </div>
        @if (!string.IsNullOrEmpty(Model.TrackingNumber))
        {
            <div class="info-row">
                <span class="info-label">Tracking Number:</span>
                <span><strong>@Model.TrackingNumber</strong></span>
            </div>
        }
    </div>

    <div class="info-section">
        <h3>Ship To:</h3>
        <p><strong>@Model.ShippingFullName</strong></p>
        <p>@Model.ShippingAddress</p>
        <p>@Model.ShippingCity, @Model.ShippingPostalCode</p>
        <p>@Model.ShippingCountry</p>
        <p><strong>Phone:</strong> @Model.ShippingPhone</p>
    </div>

    <table>
        <thead>
            <tr>
                <th style="width: 5%;">#</th>
                <th style="width: 50%;">Product Name</th>
                <th style="width: 15%;">Quantity</th>
                <th style="width: 15%;">Unit Price</th>
                <th style="width: 15%;">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @{
                int itemNumber = 1;
            }
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@itemNumber</td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>$@item.Price.ToString("N2")</td>
                    <td>$@item.Subtotal.ToString("N2")</td>
                </tr>
                itemNumber++;
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" style="text-align: right; font-weight: bold;">TOTAL:</td>
                <td style="font-weight: bold; font-size: 14pt;">$@Model.Total.ToString("N2")</td>
            </tr>
        </tfoot>
    </table>

    <div class="signature-section">
        <div class="signature-box">
            <p><strong>Prepared By:</strong></p>
            <p style="margin-top: 50px;">_________________</p>
            <p>Staff Signature</p>
        </div>
        <div class="signature-box">
            <p><strong>Received By:</strong></p>
            <p style="margin-top: 50px;">_________________</p>
            <p>Customer Signature</p>
        </div>
    </div>

    <div style="margin-top: 30px; padding: 15px; border: 2px solid #000; background-color: #EDEECE;">
        <p><strong>Delivery Instructions:</strong></p>
        <p>Please handle with care. Contact us immediately if there are any issues with the delivery.</p>
        <p><strong>Customer Service:</strong> 03-00000000 | <strong>Email:</strong> support@awe.com</p>
    </div>

    <script>
        // Auto-print when page loads (optional)
        // window.onload = function() { window.print(); }
    </script>
</body>
</html>

