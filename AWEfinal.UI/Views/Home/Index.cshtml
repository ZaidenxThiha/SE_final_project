@model List<AWEfinal.DAL.Models.Product>
@using System.Text.Json
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5 mb-5">
    <h1 class="display-4">Welcome to AWE Store</h1>
    <p class="lead">All you need in just one place.</p>
</div>

<div class="container">
    <h2 class="mb-4">Popular Products</h2>
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <p>No products available at the moment. Please check back later or contact the administrator.</p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Browse All Products</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                var productImages = new List<string>();
                if (!string.IsNullOrEmpty(product.Images))
                {
                    try
                    {
                        productImages = JsonSerializer.Deserialize<List<string>>(product.Images) ?? new List<string>();
                    }
                    catch
                    {
                        productImages = new List<string>();
                    }
                }
                var productImage = productImages.Any() ? productImages.First() : "/images/products/placeholder.jpg";
                
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@productImage" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;" onerror="this.src='/images/products/placeholder.jpg';">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted">@product.Category</p>
                            <p class="card-text"><strong class="text-primary fs-4">$@product.Price.ToString("N2")</strong></p>
                            <div class="mt-auto">
                                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-primary btn-sm w-100 mb-2">View Details</a>
                                @if (product.InStock && product.StockQuantity > 0)
                                {
                                    <a href="@Url.Action("AddToCart", "Cart", new { productId = product.Id })" class="btn btn-success btn-sm w-100">Add to Cart</a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm w-100" disabled>Out of Stock</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary">View All Products</a>
        </div>
    }
</div>

