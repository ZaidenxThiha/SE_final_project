@{
    var userName = Context.Session.GetString("UserName") ?? "Admin";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower() ?? "index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AWE Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .admin-header {
            background-color: #073634;
            color: white;
            border-bottom: 2px solid #000;
        }
        .admin-header h1 {
            font-size: 2rem;
            font-weight: bold;
            letter-spacing: 0.05em;
        }
        .admin-tabs {
            border-bottom: 2px solid #000;
            background-color: white;
        }
        .admin-tab {
            border: 2px solid #000;
            border-bottom: none;
            background-color: #EDEECE;
            color: #000;
            padding: 0.75rem 1.5rem;
            margin-bottom: -2px;
            text-decoration: none;
            display: inline-block;
            border-radius: 0.5rem 0.5rem 0 0;
        }
        .admin-tab.active {
            background-color: #073634;
            color: white;
            border-bottom-color: white;
        }
        .admin-tab:not(.active):hover {
            background-color: #e0d9b0;
        }
        .admin-content {
            background-color: #EDEECE;
            min-height: calc(100vh - 200px);
            padding: 2rem 0;
        }
        .stats-card {
            background-color: white;
            border: 2px solid #000;
            border-radius: 0.5rem;
            padding: 1rem;
        }
        .table-awe {
            background-color: white;
            border: 2px solid #000;
            border-radius: 0.5rem;
            overflow: hidden;
        }
        .table-awe thead {
            background-color: #073634;
            color: white;
        }
        .table-awe tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }
        .table-awe tbody tr:hover {
            background-color: #f0f0f0;
        }
        .btn-awe-primary {
            background-color: #073634;
            color: white;
            border: 2px solid #000;
            border-radius: 0.5rem;
            padding: 0.5rem 1rem;
        }
        .btn-awe-primary:hover {
            background-color: #052a28;
            color: white;
        }
        .btn-awe-secondary {
            background-color: #EDEECE;
            color: #000;
            border: 2px solid #000;
            border-radius: 0.5rem;
            padding: 0.5rem 1rem;
        }
        .btn-awe-secondary:hover {
            background-color: #e0d9b0;
        }
    </style>
</head>
<body style="background-color: #EDEECE;">
    <!-- Header -->
    <header class="admin-header py-3">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                    <h1 class="mb-0" style="font-size: 2rem; font-weight: bold; letter-spacing: 0.05em;">AWE</h1>
                    <h1 class="mb-0" style="font-size: 2rem; font-weight: bold; letter-spacing: 0.05em;">Admin Dashboard</h1>
                </div>
                <form asp-action="Logout" asp-controller="Auth" method="post" class="d-inline">
                    <button type="submit" class="btn btn-awe-secondary">
                        Logout
                    </button>
                </form>
            </div>
        </div>
    </header>

    <!-- Navigation Tabs -->
    <div class="admin-tabs">
        <div class="container-fluid">
            <div class="d-flex gap-1">
                <a href="@Url.Action("Products", "Admin")" 
                   class="admin-tab @(currentAction == "products" ? "active" : "")">
                    <i class="bi bi-bag"></i> Product Management
                </a>
                <a href="@Url.Action("Orders", "Admin")" 
                   class="admin-tab @(currentAction == "orders" ? "active" : "")">
                    <i class="bi bi-box-seam"></i> Order Management
                </a>
                <a href="@Url.Action("Analytics", "Admin")" 
                   class="admin-tab @(currentAction == "analytics" ? "active" : "")">
                    <i class="bi bi-bar-chart"></i> Analytics
                </a>
                <a href="@Url.Action("ChangePassword", "Admin")" 
                   class="admin-tab @(currentAction == "changepassword" ? "active" : "")">
                    <i class="bi bi-shield-lock"></i> Account
                </a>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="admin-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
