@using System
@using System.Text.Json
@{
    var navCategories = new[] { "All", "Smartphones", "Laptops", "Tablets", "Headphones", "Smart TVs", "Cameras", "Smartwatches", "Gaming Consoles", "Speakers", "Monitors" };
    var cartCount = 0;
    var cartJson = Context.Session.GetString("Cart");

    if (!string.IsNullOrEmpty(cartJson))
    {
        try
        {
            using var doc = JsonDocument.Parse(cartJson);
            foreach (var item in doc.RootElement.EnumerateArray())
            {
                if (item.TryGetProperty("Quantity", out var quantityProperty) && quantityProperty.TryGetInt32(out var quantityValue))
                {
                    cartCount += quantityValue;
                }
            }
        }
        catch
        {
            cartCount = 0;
        }
    }

    var userId = Context.Session.GetInt32("UserId");
    var userName = Context.Session.GetString("UserName") ?? "Guest";
    var userEmail = Context.Session.GetString("UserEmail");
    var userRole = Context.Session.GetString("UserRole");
    var isAdmin = string.Equals(userRole, "admin", StringComparison.OrdinalIgnoreCase);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AWE Store</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="awe-shell">
    <header class="awe-navbar">
        <div class="awe-max-container">
            <div class="awe-navbar__inner">
                <details class="awe-details">
                    <summary>
                        <span class="awe-icon-btn">
                            <i class="bi bi-menu-button-wide-fill"></i>
                        </span>
                        <span>Categories</span>
                    </summary>
                    <div class="awe-dropdown">
                        <div class="awe-dropdown__list">
                            @foreach (var category in navCategories)
                            {
                                if (category == "All")
                                {
                                    <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-category="All">@category</a>
                                }
                                else
                                {
                                    <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-category="@category">@category</a>
                                }
                            }
                        </div>
                    </div>
                </details>

                <a class="awe-navbar__brand" asp-area="" asp-controller="Home" asp-action="Index">AWE</a>

                <div class="awe-navbar__search">
                    <form asp-area="" asp-controller="Product" asp-action="Index" method="get">
                        <div class="awe-search">
                            <i class="bi bi-search awe-search__icon"></i>
                            <input type="text" name="searchTerm" placeholder="Looking for something? We got you!" />
                        </div>
                    </form>
                    <div class="awe-search__hint">
                        Trusted Quality. Simple Clicks. Delivered to Your Door.
                    </div>
                </div>

                <div class="awe-icon-buttons">
                    <a class="awe-icon-btn" asp-area="" asp-controller="Home" asp-action="Index" title="Home">
                        <i class="bi bi-house-door-fill"></i>
                    </a>
                    <a class="awe-icon-btn" asp-area="" asp-controller="Product" asp-action="Index" title="Browse products">
                        <i class="bi bi-grid"></i>
                    </a>
                    <a class="awe-icon-btn" asp-area="" asp-controller="Cart" asp-action="Index" title="Open cart">
                        <i class="bi bi-bag-fill"></i>
                        <span id="js-cart-count" class="awe-badge @(cartCount <= 0 ? "is-hidden" : string.Empty)">@cartCount</span>
                    </a>

                    <details class="awe-details">
                        <summary>
                            <span class="awe-icon-btn">
                                <i class="bi bi-person-circle"></i>
                            </span>
                            <span>@(userId == null ? "Account" : "Hi, " + userName.Split(' ')[0])</span>
                        </summary>
                        <div class="awe-dropdown">
                            @if (userId == null)
                            {
                                <div class="awe-dropdown__list">
                                    <a asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                                    <a asp-area="" asp-controller="Auth" asp-action="Register">Create account</a>
                                </div>
                            }
                            else
                            {
                                <div class="awe-user-card">
                                    <div class="name">@userName</div>
                                    @if (!string.IsNullOrEmpty(userEmail))
                                    {
                                        <div class="email">@userEmail</div>
                                    }
                                </div>
                                <div class="awe-dropdown__list">
                                    <a asp-area="" asp-controller="Order" asp-action="Index">
                                        <i class="bi bi-clock-history me-2"></i> Orders
                                    </a>
                                    <a asp-area="" asp-controller="Cart" asp-action="Index">
                                        <i class="bi bi-bag-check me-2"></i> Cart
                                    </a>
                                    @if (isAdmin)
                                    {
                                        <a asp-area="" asp-controller="Admin" asp-action="Index">
                                            <i class="bi bi-speedometer2 me-2"></i> Admin Dashboard
                                        </a>
                                    }
                                    <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" class="awe-dropdown__form">
                                        <button type="submit" class="awe-dropdown__action">
                                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    </details>
                </div>
            </div>
        </div>
    </header>

    <div class="awe-max-container">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <footer class="awe-footer">
        <div class="awe-max-container">
            <div class="awe-footer__inner">
                <span>&copy; 2024 - AWE Store</span>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>
    <div class="awe-toast-root" id="aweToastRoot"></div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="~/js/cart-toast.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
