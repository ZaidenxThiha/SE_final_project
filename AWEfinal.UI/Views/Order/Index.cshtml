@model List<AWEfinal.DAL.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

@if (Model == null || !Model.Any())
{
    <p>You have no orders yet.</p>
    <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Start Shopping</a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order Number</th>
                <th>Date</th>
                <th>Total</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderNumber</td>
                    <td>@order.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                    <td>$@order.Total.ToString("N2")</td>
                    <td>@order.Status</td>
                    <td>
                        <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-sm btn-primary">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

